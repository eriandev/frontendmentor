---
import Icon from 'shared/components/Icon.astro'

interface Props {
  title: string
  amount: string
  variation: number
  social: 'facebook' | 'twitter' | 'instagram' | 'youtube'
}

const { amount, social, title, variation } = Astro.props

const isUp = variation >= 0
---

<article
  class="transition-standard bg-light-gray-blue text-desa-blue dark:bg-dark-desa-blue flex flex-col rounded-lg py-6 text-lg font-bold"
>
  <div class="flex flex-wrap items-center justify-between px-6 py-3">
    <h5>{title}</h5>
    <Icon name={'icon-' + social} size={20} />
  </div>

  <div class="flex flex-wrap justify-between px-6 py-3">
    <span class="text-dark-blue flex items-end text-5xl leading-none dark:text-white">{amount}</span>
    <div class="flex items-end">
      <p class:list={{ 'text-lime-green': isUp, 'text-bright-red': !isUp }}>
        <Icon name={'icon-' + (isUp ? 'up' : 'down')} size={8} class="inline" />
        {Math.abs(variation)}%
      </p>
    </div>
  </div>
</article>
